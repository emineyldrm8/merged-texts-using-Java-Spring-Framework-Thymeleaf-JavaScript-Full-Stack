@RestController
public class HomeRestController {
   

	private static final Object[] Bookrepo = null;
	Bookrepo bookrepo;
	List<Bookrepo> listbookrepo;
	List<Book> booklist;

	/*public HomeRestController(List<Book> booklist) {
